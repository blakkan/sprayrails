.container-fluid
  %h3
    Classification
  %form.ml-2.ml-sm-2.ml-md-2.ml-lg-4.ml-xl-4
    .row.my-2
      =image_tag Picture.last.snapshot

    .row.my-2
      ="#{@class_items[0]}"
    .row.my-2
      ="Probability: #{(@class_items[1].to_f * 100.0).round(2)}%"
    .row.my-2
      %a.btn.btn-primary{href: "/display_camera_screen"}
        Capture new image
    .row.my-2
      %a.btn.btn-primary{href: "/display_current_image_classification"}
        Classify current image
    .row.my-2
      %a.btn.btn-danger{href: "/display_current_image_classification_and_spray"}
        Classify current and spray
    .row.my-2
      %a.btn.btn-danger{href: "/do_full_cycle"}
        Capture, classify, spray
    .row.my-2
      %a.btn.btn-secondary{href: "/display_main_screen"}
        Back to main screen